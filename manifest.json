{
  "name": "tab-size: 4",
  "action": {},
  "manifest_version": 3,
  "version": "0.1",
  "description": "This is Custom Tab Size. tab size to 4 instead of 8",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "commands": {
    "toggle-tab-size": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "windows": "Ctrl+Shift+S",
        "mac": "Command+Shift+S",
        "linux": "Ctrl+Shift+S"
      },
      "description": "탭 사이즈를 4로 변경합니다."
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}